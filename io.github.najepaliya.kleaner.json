{
  "id": "io.github.najepaliya.kleaner",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "kleaner",
  "tags": ["nightly"],
  "desktop-file-name-suffix": " (Nightly)",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "separate-locales": false,

  "modules": [
    {
      "name": "kleaner",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [{ "type": "dir", "path": ".", "skip": [".git"] }]
    }
  ]
}
